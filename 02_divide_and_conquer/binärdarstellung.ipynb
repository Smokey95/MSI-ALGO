   "source": [
    "def bin(n):\n",
    "  if n < 2:\n",
    "    return str(n)\n",
    "  \n",
    "  ret = str(n % 2)\n",
    "  val = bin(n - 1)\n",
    "  ret += val\n",
    "\n",
    "  return ret\n",
    "\n",
    "print(bin(3))\n",
    "print(bin(4))\n",
    "print(bin(5))\n",
    "print(bin(8))\n",
    "print(bin(9))"
   ]
  }
